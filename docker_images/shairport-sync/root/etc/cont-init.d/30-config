#!/usr/bin/with-contenv bash

# make folders
mkdir -p /config/shairport-sync
mkdir -p ~/.config/pulse

[[ ! -f /config/shairport-sync/shairport-sync.conf ]] && cp /defaults/shairport-sync.conf /config/shairport-sync/shairport-sync.conf
[[ ! -f ~/.config/pulse/cookie ]] && touch ~/.config/pulse/cookie

# permissions
chown -R abc:abc \
	/config \
	~/.config

# allow read permission for cookie
chmod -R 755 /root
